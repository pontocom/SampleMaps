<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.iscte_iul.samplemaps" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAIL-JygsJBKA4vnz9Kcs-YyArQBpxXK5Q" />

        <activity
            android:name=".SimpleMapActivity"
            android:label="@string/title_activity_simple_map" >
        </activity>
        <activity
            android:name=".PositionAndZoomActivity"
            android:label="@string/title_activity_position_and_zoom" >
        </activity>
        <activity
            android:name=".ChangeMapTypeActivity"
            android:label="@string/title_activity_change_map_type" >
        </activity>
        <activity
            android:name=".IndoorMapsActivity"
            android:label="@string/title_activity_indoor_maps" >
        </activity>
        <activity
            android:name=".CameraAnimationActivity"
            android:label="@string/title_activity_camera_animation" >
        </activity>
    </application>

</manifest>
